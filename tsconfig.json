{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "frontend/*":  ["./src/*"],
      "shared/*":  ["./shared/*"],
      "types/*": ["./types/*"]
    }
  },
  "include": ["src/**/*","shared/**/*","types/**/*"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
