{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noImplicitThis": false,
    "noEmit": true,
    "paths": {
      "backend/*":  ["./electron/*"],
      "frontend/*":  ["./src/*"],
      "shared/*":  ["./shared/*"],
      "types/*": ["./types/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "package.json",
    "electron/**/*",
    "src/**/*",
    "shared/**/*",
    "types/**/*"
  ]
}
